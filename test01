			 let a=window.prompt("手を決めてください、１はグー(锤)、２はチョキ(剪)、３はパー(布)。")
       let b=parseInt(Math.random()*2)+1
       let gu=1,tyoki=2,pa=3
       if (a==gu && b==pa){
         window.alert("負");
        } else if (a==tyoki && b==gu){
           window.alert("負");
        }else if(a==pa && b==tyoki){
             window.alert("負");
        }else if(a==gu && b==tyoki){
           window.alert("勝");
        }else if(a==tyoki && b==pa){
             window.alert("勝");
        }else if(a==pa && b==gu){
         window.alert("勝");
